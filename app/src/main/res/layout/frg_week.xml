<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.android.mb.schedule.custom.CustomWeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--<com.android.mb.schedule.custom.CustomWeekView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

    <com.android.mb.schedule.widget.ScheduleView
        android:id="@+id/scheduleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:addBgColor="#dff4ff"
        app:addTextColor="#47a1f6"
        app:addTextSize="26sp"
        app:allDayCountTextColor="#5e636d"
        app:allDayCountTextSize="14sp"
        app:allDayEventBgColor="#ffffff"
        app:allDayEventDefaultColor="#85cdca"
        app:allDayEventMaxRow="10"
        app:allDayEventMinRow="2"
        app:allDayEventRowHeight="20dp"
        app:allDayEventSize="12sp"
        app:allDayEventTitleColor="#525252"
        app:allDayEventTitleSize="12sp"
        app:bgColor="#ffffff"
        app:columnNumber="7"
        app:currentTimeColor="#5e636c"
        app:currentTimeTextColor="#ffffff"
        app:currentTimeTextSize="10sp"
        app:eventTextBgColor="#85cdca"
        app:eventTextBgLineColor="#dfdfdf"
        app:eventTextColor="#ffffff"
        app:eventTextSize="12sp"
        app:hourTextBgColor="#ffffff"
        app:hourTextColor="#525252"
        app:hourTextSize="10sp"
        app:lineColor="#dfdfdf"
        app:lineSize="1dp"
        app:pastTimeColor="#eff5f9"
        app:rowHeight="60dp" />
</LinearLayout>